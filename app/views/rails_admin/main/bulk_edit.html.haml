#block-tables.block
  /= breadcrumbs_for :bulk_edit, @abstract_model

  .content
    .control
      /= action_button history_object_path(:id => params[:id]), t("admin.history.name"), :'calendar-hover'

    %h2.title= @page_name
    .inner
      = render(:partial => 'layouts/rails_admin/flash', :locals => {:flash => flash})
      - @object = @abstract_model.new
      = send(@model_config.edit.form_builder, @object, :url => bulk_update_path(:model_name => @abstract_model.to_param, :bulk_ids => @bulk_objects.map(&:id)), :html => { :multipart => true, :class => "form" }) do |form|
        - @model_config.bulkedit.with(:form => form, :object => @object, :view => self).visible_groups.each do |fieldset|
          = render :partial => 'form_fieldset', :locals => { :fieldset => fieldset, :form => form, :object => @object }
        = render :partial => 'submit_buttons'
